<UserControl x:Class="Live_Cricket_2._0.Views.CustomMessages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Live_Cricket_2._0.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="500" Background="Transparent" >
  
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" Grid.Row="0" HorizontalAlignment="Center" FontSize="14" VerticalAlignment="Center" Text="{Binding StrTodaysMatchesCustomMessage}"></TextBlock>
        <TextBlock TextAlignment="Right" Grid.Row="1" HorizontalAlignment="Right" FontSize="13" VerticalAlignment="Center" Text="Refreshing... "></TextBlock>
    </Grid>
</UserControl>
